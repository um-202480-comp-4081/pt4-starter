<h1>Playlist</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover">

    <thead class="table-dark">
      <tr>
        <th>Number</th>
        <th>Track</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @tracks.each do |t| %>
        <tr>
          <td><%= t.order_number %></td>
          <td><%= t.title %></td>
          <td class="text-nowrap">
            <%= link_to 'show', track_path(t) %> |
            edit |
            destroy
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>

